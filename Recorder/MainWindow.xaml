<Window x:Class="Recorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recorder"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <StackPanel>
            <Ellipse Height="20" Fill="Red" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,0,0" Name="ell_flag"
		         Stroke="Red" Width="20" />
            <Image x:Name="cam" HorizontalAlignment="Left" Height="300" Margin="10,30,0,0" VerticalAlignment="Top" Width="400" />
            <Button x:Name="BeginRec" VerticalAlignment="Bottom" Margin="10,30,0,0" HorizontalAlignment="Left" Width="40" Height="30" Click="BeginRec_Click">Start</Button>
            <Ellipse Height="20" Fill="Red" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,5,0,0" x:Name="rec_flag"
            	Stroke="Red" Width="20" />
            <Button x:Name="EndRec" VerticalAlignment="Bottom" Margin="10,30,0,0" HorizontalAlignment="Left" Width="40" Height="30" Click="EndRec_Click" >End</Button>
        </StackPanel>
    </Grid>
</Window>
